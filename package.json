  },
  "devDependencies": {
    "@dcl/eslint-config": "^1.0.1",
    "decentraland-ecs": "latest"
  },
  "dependencies": {
    "@dcl/ecs-scene-utils": "latest",
    "@dcl/ui-scene-utils": "latest"
  },
  "bundleDependencies": [
    "@dcl/ecs-scene-utils",
    "@dcl/ui-scene-utils"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0",
    "yarn": "please use npm"
  }
